{
    "name": "du-project",
    "displayName": "DU Project",
    "description": "Manage projects for Dual Universe scripts.",
    "version": "0.1903.4",
    "publisher": "Ciaanh",
    "license": "MIT",
    "engines": {
        "vscode": "^1.26.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Ciaanh/du-project.git"
    },
    "categories": [
        "Other"
    ],
    "main": "./out/extension",
    "activationEvents": [
        "onCommand:extension.previewDUFile",
        "onCommand:extension.previewDUProject",
        "onLanguage:duproject",
        "onWebviewPanel:duProjectOverview"
    ],
    "contributes": {
        "languages": [
            {
                "id": "duproject",
                "aliases": [
                    "DUProject",
                    "dup"
                ],
                "extensions": [
                    ".json"
                ]
            }
        ],
        "commands": [
            {
                "command": "extension.previewDUFile",
                "title": "show preview from file.",
                "category": "DU project"
            },
            {
                "command": "extension.previewDUProject",
                "title": "show preview from project.",
                "category": "DU project"
            },
            {
                "command": "extension.loadDefaultDUWorkspace",
                "title": "open the default workspace from the configuration if defined.",
                "category": "DU project"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "DU Project configuration",
            "properties": {
                "duproject.defaultWorkspace": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Default path for workspace containing projects."
                },
                "duproject.isDebug": {
                    "type": [
                        "boolean"
                    ],
                    "default": false,
                    "description": "Define if the project is in debug mode."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "npm-run-all compile:*",
        "compile:extension": "tsc -p ./",
        "compile:views": "webpack --mode development",
        "watch": "npm-run-all -p watch:*",
        "watch:extension": "tsc -watch -p ./",
        "watch:views": "webpack --watch --mode development",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "package": "vsce package"
    },
    "extensionDependencies": [],
    "dependencies": {
        "react": "^16.8.4",
        "react-dom": "^16.8.4",
        "react-syntax-highlighter": "^10.2.0",
        "vscode": "^1.1.18"
    },
    "devDependencies": {
        "@types/node": "^10.5.2",
        "@types/react": "^16.4.6",
        "@types/react-dom": "^16.0.6",
        "@types/react-syntax-highlighter": "^10.1.0",
        "css-loader": "^1.0.0",
        "less": "^3.7.0",
        "less-loader": "^4.1.0",
        "npm-run-all": "^4.1.3",
        "style-loader": "^0.21.0",
        "styled-components": "^3.3.3",
        "ts-import-plugin": "^1.5.4",
        "ts-loader": "^4.4.2",
        "typescript": "^2.9.2",
        "vsce": "^1.47.0",
        "webpack": "^4.15.1",
        "webpack-cli": "^3.0.8"
    }
}
